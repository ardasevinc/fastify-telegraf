{
  "name": "@ardasevinc/fastify-telegraf",
  "access": "public",
  "version": "1.3.0",
  "description": "Pure ESM, modern fork of @eomm/fastify-telegram",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "tap --no-cov test/**/*.test.js",
    "prebuild": "rimraf ./dist",
    "build": "pnpm run prebuild && tsc -p ./tsconfig.json; tsc-alias -p ./tsconfig.json"
  },
  "files": ["./dist/**/*.js", "./dist/**/*.ts"],
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "keywords": [
    "fastify",
    "telegram",
    "bot",
    "fastify-plugin",
    "telegraf"
  ],
  "author": {
    "name": "Arda Sevinc",
    "email": "arda@ardasevinc.com",
    "url": "https://github.com/ardasevinc"
  },
  "license": "MIT",
  "homepage": "https://github.com/ardasevinc/fastify-telegraf#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardasevinc/fastify-telegraf.git"
  },
  "bugs": {
    "url": "https://github.com/ardasevinc/fastify-telegraf/issues"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^4.0.0",
    "fastify-plugin": "^4.5.1",
    "telegraf": "^4.16.3",
    "undici": "^6.19.2"
  },
  "devDependencies": {
    "@ardasevinc/prettier-config": "^0.1.4",
    "@types/node": "^20.14.9",
    "fastify": "^4.28.1",
    "rimraf": "^5.0.7",
    "standard": "^17.1.0",
    "tap": "^20.0.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.3"
  },
  "prettier": "@ardasevinc/prettier-config"
}
